---
const pageTitle = "Welcome to Ryo's Website!";

import "../styles/global.css";
// Componentのインポート
import Footer from "../components/footer.astro";

const navLinks = [
    { href: "/", text: "Home" },
    { href: "/about", text: "About" },
    { href: "/blog", text: "Blog" },
];
---

<html>

  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <link rel="global" href="../styles/global.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400..700&family=M+PLUS+1:wght@100..900&display=swap" rel="global">
  </head>

  <body>
  <!-- componentの呼び出し -->
    <div class="container">
      <h1 class="pagetitle">{pageTitle}</h1>
      <div class="container2">
        <nav class="nav">
          <ul class="nav-list">
            {navLinks.map(link => (
              <li class="nav-item">
                <a href={link.href} class="nav-link">{link.text}</a>
              </li>
            ))}
          </ul>
        </nav>
      </div>
    </div>
    <Footer/>
  </body>

</html>

<style>
  .container {
    background-image: url("../assets/Colored_Shapes.svg");
    background-size: cover;
    background-repeat: no-repeat;
    background-color: rgba(255, 255, 255, 0.3);
    background-blend-mode: lighten;
    margin: 0;
    height: 96vh;
    width: 100%;
    display: flex; /* フレックスボックスを有効化 */
    flex-direction: column; /* 子要素を縦方向に並べる */
    justify-content: center; /* 垂直方向に中央揃え */
    align-items: center; /* 水平方向に中央揃え */
  }
  .container2 {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    align-items: center;
  }

  .nav-list {
    font-family: 'Dancing Script', cursive;
    font-size: 2rem;
    list-style: none;
    display: flex;
    gap: 2rem;
  }

  .nav-link {
    color: #333;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .nav-link:hover {
    color: #4666ff;
    font-size: 2.5rem;
  }
  .pagetitle {
    font-family: "Dancing Script", cursive;
    font-optical-sizing: auto;
    font-weight: <weight>;
    font-style: normal;
    font-size: 50px;
    padding: 10px;
    text-align: center; /* テキストを中央揃え */
  }
</style>
